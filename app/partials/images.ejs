<button class="btn btn-primary" data-bind="click: function() { console.log(JSON.parse(ko.toJSON(activeImage().sizes()[1], null, 2))) }">Debug active image</button>
<button class="btn btn-success" data-toggle="modal" data-target="#newImageModal" data-bind="click: function() { editingImage(new Image()) }">Add a new image</button>

<table data-bind="if: images().length > 0" class="table">
  <thead>
    <tr>
      <th colspan="2">Name</th>
    </tr>
  </thead>
  <tbody data-bind="foreach: images">
    <tr data-bind="click: function() { $root.setActiveImage(id) }, css: { active: active() }" style="cursor: pointer;">
      <td style="vertical-align: middle;">
        
        <span data-bind="visible: !isEditing(name)">
          <span data-bind="text: name, click: function() { editing(name) }"></span>
        </span>
        <span data-bind="visibleAndSelect: isEditing(name)">
          <input class="form-control" type="text" data-bind="value: name, event: { blur: function() { clearEdit(name) } }">
        </span>

      </td>
      <td style="text-align: right;">
        <button data-bind="click: function() { $root.removeImage(id) }" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </td>
    </tr>
  </tbody>
</table>